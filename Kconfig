# Video configuration

menu "Architecture"
config STACK_SIZE
    hex "Kernel stack size"
    default 0x8000
config RAM_ADDRESS
    hex "General purpose RAM (Mapped address)"
    default 0x40000000
config RAM_SIZE
    hex "General purpose RAM (Full length)"
    default 0x20000000
config ARM_GIC_CPU
    hex "Generic Interrupt Controller (CPU address)"
    default 0x01C82000
config ARM_GIC_DIST
    hex "Generic Interrupt Controller (DIST address)"
    default 0x01C81000
endmenu

menu "Video output"

choice VIDEO_DEVICE
    prompt "Device"
config VIDEO_DUMMY
    bool "Dummy device"
config VIDEO_ILI9488_SPI_X
    bool "Ili9488 SPI-X"
    select EXTRA_BITBANG
endchoice

menu "Ili9488 SPI-X"
    depends on VIDEO_ILI9488_SPI_X
config ILI9488_SS
    string "SS pin"
    default PA0
config ILI9488_SCK
    string "SCK pin"
    default PA1
config ILI9488_MOSI
    string "MOSI pin"
    default PA2
config ILI9488_MISO
    string "MISO pin"
    default PA3
config ILI9488_DCRS
    string "DCRS pin"
    default PA12
config ILI9488_LEDS
    string "LEDS pin"
    default PA11
endmenu

endmenu

# Audio configuration

menu "Audio Output"

choice AUDIO_DEVICE
    prompt "Device"
config AUDIO_DUMMY
    bool "Dummy device"
config AUDIO_BUZZER
    bool "Buzzer"
endchoice

menu "Buzzer"
    depends on AUDIO_BUZZER
config BUZZER_PIN
    string "Output pin"
    default PA13
endmenu

endmenu

# Storage configuration

menu "Storage"

choice STORAGE_DEVICE
    prompt "Device"
config STORAGE_DUMMY
    bool "Dummy device"
config STORAGE_FAT32_MBR_SD0
    bool "SD Card 0 (MBR/Fat32)"
endchoice

endmenu

# Serial configuration

menu "Serial"

choice SERIAL_DEVICE
    prompt "Device"
config SERIAL_DUMMY
    bool "Dummy device"
config SERIAL_SUNXI_UART
    bool "Sunxi UART"
endchoice

endmenu

# Library configuration

menu "Extra Libraries"
config EXTRA_BITBANG
    bool "Bitbang library"
    default y
config EXTRA_DIAGNOSIS
    bool "Diagnosis library"
    default n
endmenu
