CONFIG_ARCH_ARM=y
CONFIG_ARCH_ARM_SUNXI=y
CONFIG_ARM_GIC=y

CONFIG_UBOOT_CONFIG="orangepi_one_defconfig"
CONFIG_UBOOT_IMAGE="u-boot-sunxi-with-spl.bin"
CONFIG_QEMU_MACHINE="orangepi-pc"

CONFIG_ARCH="arm"
CONFIG_TARGET="arm-none-eabi"
CONFIG_CFLAGS_ARCH="-fpic -Wl,--no-warn-rwx-segment"
CONFIG_CFLAGS_BOARD="-mcpu=cortex-a7 -mfloat-abi=soft"
CONFIG_DEVICE_TREE="devtree/sunxi_h3.c"
CONFIG_SUNXI_BOARD="ORANGEPI_ONE"

CONFIG_RAM_ADDRESS=0x40000000
CONFIG_RAM_SIZE=0x20000000
CONFIG_STACK_SIZE=0x8000

CONFIG_FS_MBR=y
CONFIG_FS_FAT32=y

CONFIG_STORAGE_SUNXI_MMC=y
CONFIG_SERIAL_SUNXI_UART=y
CONFIG_TIMER_SUNXI_TIMER=y
CONFIG_GPIO_SUNXI_GPIO=y
